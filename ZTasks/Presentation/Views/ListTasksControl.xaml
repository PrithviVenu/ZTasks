<UserControl
    x:Class="ZTasks.Presentation.Views.ListTasksControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZTasks.Presentation.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <RelativePanel  Margin="0,10,0,0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto"   >
        <TextBlock RelativePanel.AlignLeftWithPanel="True" Name="TaskTitle" Text="{x:Bind Tasks.TaskTitle , Mode=TwoWay}" FontSize="16"   Margin="10 0 0 2"/>
        <TextBlock RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignTopWith="TaskTitle" Name="TaskDueDate" Text="Aug 15" FontSize="16"   Margin="0 0 10 0"/>
        <TextBlock RelativePanel.AlignLeftWithPanel="True" RelativePanel.Below="TaskTitle" Name="TaskAssignee" FontWeight="Medium" Text="Assignee:" FontSize="16"   Margin="10 0 0 0"/>
        <TextBlock RelativePanel.RightOf="TaskAssignee"  RelativePanel.AlignBottomWith="TaskAssignee" Name="TaskAssigneeName" Text="{x:Bind Tasks.Assignee, Mode=TwoWay}" FontSize="16"   Margin="10,0,0,0"/>
        <Line  Name="Line" Stretch="Fill" Margin="5 10 0 2" Stroke="DimGray" X2="1"  RelativePanel.Below="TaskAssignee" />
    </RelativePanel>
</UserControl>
